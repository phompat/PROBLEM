#include <bits/stdc++.h>
using namespace std;
#define ll long long
void solve(){
    int n;
    cin>>n;
    vector<int>a(n);
    for(int i=0;i<n;i++)cin>>a[i];
    sort(a.begin(),a.end());
    set<int>s,e;
    vector<int>keep;
    for(int i=0;i<n;i++){
        e.insert(a[i]+n);
        s.insert(a[i]+1);
    }
    for(auto x:e){
        keep.push_back(x);
    }
    reverse(keep.begin(),keep.end());
    int ans=1,countt=0;
    for(auto x:s){
        countt++;
        while(!keep.empty()&&keep.back()<x){
            countt--;
            keep.pop_back();
        }
        ans=max(ans,countt);
    }
    cout<<ans<<endl;

}
int main()
{
    ios_base::sync_with_stdio(0);cin.tie(0);
    int t;cin>>t;
    while(t--)solve();
}
